<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <artifactId>marytts</artifactId>
    <groupId>marytts</groupId>
    <version>5.0-SNAPSHOT</version>
  </parent>
  <groupId>marytts</groupId>
  <artifactId>marytts-builder</artifactId>
  <name>marytts-builder</name>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  </properties>
  <dependencies>

    <dependency>
      <groupId>marytts</groupId>
      <artifactId>marytts-common</artifactId>
      <version>5.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>marytts</groupId>
      <artifactId>marytts-signalproc</artifactId>
      <version>5.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>marytts</groupId>
      <artifactId>marytts-runtime</artifactId>
      <version>5.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>marytts</groupId>
      <artifactId>marytts-client</artifactId>
      <version>5.0-SNAPSHOT</version>
    </dependency>
    

    
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.8.2</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>oro</groupId>
      <artifactId>oro</artifactId>
      <version>2.0.8</version>
    </dependency>
    <dependency>
      <groupId>org.swinglabs</groupId>
      <artifactId>swing-layout</artifactId>
      <version>1.0.3</version>
    </dependency>
    
    <!-- System dependencies - to be replaced where possible -->
    <dependency>
      <groupId>weka</groupId>
      <artifactId>weka</artifactId>
      <version>3</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/weka.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>dummy</groupId>
      <artifactId>dummy24</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/sgt_v30.jar</systemPath>
    </dependency>
    <dependency>
      <groupId>dummy</groupId>
      <artifactId>dummy21</artifactId>
      <version>1.0</version>
      <scope>system</scope>
      <systemPath>${basedir}/lib/mwdumper-2008-04-13.jar</systemPath>
    </dependency> 
  </dependencies>
  
  
    <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-jar-plugin</artifactId>
        <version>2.3.1</version>
        <executions>
          <execution>
            <id>redstart</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>redstart</classifier>
              <includes>
                <include>marytts/tools/redstart/*</include>
              </includes>
            </configuration>
          </execution>
          <execution>
            <id>transcription</id>
            <phase>package</phase>
            <goals>
              <goal>jar</goal>
            </goals>
            <configuration>
              <classifier>transcription</classifier>
              <includes>
                <include>marytts/tools/transcription/*</include>
              </includes>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
