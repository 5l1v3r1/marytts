<?xml version="1.0" encoding="UTF-8" standalone="yes" ?><installation version="1.0">    <info>        <appname>MARY TTS</appname>        <appversion>3.0</appversion>        <authors>            <author name="Marc Schröder" email="schroed@dfki.de"/>            <author name="Jochen Steigner" email=""/>            <author name="Stefanie Becker" email=""/>            <author name="Anna Hunecke" email=""/>            <author name="Emilia Ellsiepen" email=""/>            <author name="Philipp von Böselager" email=""/>            <author name="Jens Apel" email=""/>            <author name="Lars Jungjohann" email=""/>            <author name="Maria Staudte" email=""/>            <author name="Jürgen Trouvain" email=""/>            <author name="Gregory Gulrajani" email=""/>        </authors>        <url>http://mary.dfki.de</url>        <javaversion>1.4</javaversion>        <webdir>http://mary.dfki.de/download</webdir>    </info>    <guiprefs width="800" height="600" resizable="yes"/>    <locale>        <langpack iso3="eng"/>    </locale>    <variables>      <variable name="LicensePanel.packsCovered.0" value="marybase maryclient emospeak english english-kevin16 tibetan javadoc sources"/>    </variables>
    <resources>        <res id="LicensePanel.license.0" src="MARY_software_user_agreement.txt" encoding="UTF-8"/>        <res id="InfoPanel.info" src="build/installer-info.txt"/>        <res id="XInfoPanel.info" src="build/getstarted-info.txt"/>		<res id="shortcutSpec.xml" src="build/shortcuts-windows.xml"/>		<res id="Unix_shortcutSpec.xml" src="build/shortcuts-linux.xml"/>	</resources>    <!-- For creating shortcuts under Windows -->    <native type="izpack" name="ShellLink.dll"/>
    <panels>        <panel classname="HelloPanel"/>        <panel classname="InfoPanel"/>        <panel classname="TargetPanel"/>         <panel classname="PacksPanel"/>        <panel classname="de.dfki.lt.izpack.LicensePanel"/>        <panel classname="InstallPanel"/>        <panel classname="ShortcutPanel"/>        <panel classname="XInfoPanel"/>        <panel classname="SimpleFinishPanel"/>        <!--panel classname="FinishPanel"/-->    </panels>
    <packs>        <pack name="marybase" required="no" preselected="yes"><description>OpenMary Base: The base files for the OpenMary Text-to-speech server.You will need this (unless you want to access a server running elsewhere, in which caseyou will only need the MARY client).This component is licensed under the BSD-style OpenMary license.</description>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY_software_user_agreement.txt,					conf/marybase.config,					doc/licenses/apache-software-license.txt,					doc/licenses/CPL.txt,					doc/licenses/freetts-license.txt,					doc/licenses/jsresources-license.txt,					doc/licenses/LGPL.txt,					doc/licenses/README.txt,					lib/MaryXML.xsd,					lib/Sable.v0_2.mary.dtd,					lib/apml.dtd,					lib/sable-latin.ent,					lib/xml.xsd,					lib/endorsed/xalan-2.5.0.jar,					lib/endorsed/xercesImpl-2.4.0.jar,					lib/endorsed/xml-apis-from-xalan-2.5.0.jar,					lib/modules/en/cap/phoneme-list-en.xml,					lib/modules/tokeniser/jtok.cfg,					lib/modules/tokeniser/de/de_abbrev.xml,					lib/modules/tokeniser/de/de_classes.xml,					lib/modules/tokeniser/de/de_clitics.xml,					lib/modules/tokeniser/de/de_nbabbrev.txt,					lib/modules/tokeniser/de/de_numbers.xml,					lib/modules/tokeniser/de/de_punct.xml,					lib/modules/tokeniser/en/en_abbrev.xml,					lib/modules/tokeniser/en/en_classes.xml,					lib/modules/tokeniser/en/en_clitics.xml,					lib/modules/tokeniser/en/en_nbabbrev.txt,					lib/modules/tokeniser/en/en_numbers.xml,					lib/modules/tokeniser/en/en_punct.xml,					java/jsresources.jar,					java/jtok.jar,					java/junit.jar,					java/log4j-1.2.8.jar,					java/mary-common.jar,					java/mary-mbrola.jar,					java/tritonus_mp3.jar,					java/tritonus_remaining.jar,					java/tritonus_share.jar,					java/tritonus_src.jar,					log/README.txt,					tmp/README.txt,					Changelog.txt,					README.txt,					java/freetts.jar,					java/freetts-germanlex.jar,					java/freetts-de.jar,					java/freetts-mbrola.jar,					java/mary-freetts.jar"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH"				includes="bin/maryserver.bat,				    lib/windows/lame_enc.dll,					lib/windows/lametritonus.dll,					lib/windows/README.txt,					lib/icons/mary.ico,					lib/icons/maryicon.png"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/maryserver.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/lib/windows/lame_enc.dll" stage="never"/>            <executable os="windows" targetfile="$INSTALL_PATH/lib/windows/lametritonus.dll" stage="never"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/maryserver.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/maryserver"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/maryserver"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/maryserver" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/maryserver"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/maryserver"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/maryserver" stage="never"/>            <fileset dir="lib/linux" targetdir="$INSTALL_PATH/lib/native"				includes="README.txt,					liblametritonus.so,					libmp3lame.so.0">				<os name="Linux"/>			</fileset>        </pack>        <pack name="maryclient" required="yes"><description>OpenMary Client: The Client to the OpenMary TTS system.You will need a client and a server to run the system on your machine.However, in certain circumstances, you may want to connect to a serverrunning elsewhere, so you need only a client.This includes a client implementation in Java, accompanied with a GUIinterface. Several simple example implementations in other programminglanguages are also included.This component is licensed under the BSD-style OpenMary license.</description>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY software user agreement.txt,					doc/licenses/LGPL.txt,					examples/client/maryclient.pl,					examples/client/MaryClientUser.java,					examples/client/c++/Makefile,					examples/client/c++/mary_client.h,					examples/client/c++/mary_client.cc,					examples/client/c++/unicode.h,					examples/client/c++/unicode.cc,					examples/client/c++/demo_mary_client.cc,					java/maryclient.jar,					java/java-diff.jar,					java/tritonus_mp3.jar,					java/jl1.0.jar,					lib/icons/mary.ico,					lib/icons/maryicon.png"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient.bat"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/maryclient.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/maryclient.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/maryclient"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/maryclient" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/maryclient"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/maryclient" stage="never"/>        </pack>        <pack name="emospeak" required="no" preselected="yes"><description>OpenMary EmoSpeak: Emotional speech with the OpenMary TTS system.This includes a standalone and an applet version.Both versions rely on the maryclient component for connecting to a server.Note: Emospeak currently works only with German TTS.This component is licensed under the BSD-style OpenMary license.</description>            <depends packname="maryclient"/>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY software user agreement.txt,					examples/emospeak-applet.html,					java/emospeak.jar,					java/emospeakapplet.jar"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak.bat"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/emospeak.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/emospeak.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/emospeak"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/emospeak" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/emospeak"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/emospeak" stage="never"/>        </pack>        <pack name="english" required="no" preselected="yes"><description>OpenMary English: Basic English synthesis.You will need an English voice component, e.g. english-kevin16.If you can accept a research license, you should also install theenglish-shprot component: It provides part-of-speech taggingwhich improves the prosodic realisation.This component is licensed under the BSD-style OpenMary license.</description>            <depends packname="marybase"/>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/english.config,					lib/modules/en/cap/tobirule-params-en.xml,					lib/modules/en/cap/freetts-phoneset.txt,					lib/modules/en/cap/freetts-pos.txt,					lib/modules/en/prosody/POSAccentPriorities.en.properties,					lib/modules/en/prosody/tobipredparams_english.xml,					lib/modules/en/synthesis/sampa2mrpa_en.map,					java/freetts-cmudict04.jar,					java/freetts-cmutimelex.jar,					java/freetts-en_us.jar,					java/mary-english.jar"/>        </pack>                <pack name="english-kevin16" required="no" preselected="yes"><depends packname="english"/><description>OpenMary English male diphone voice.This basic US English diphone voice is taken from FreeTTS,and was originally created by Carnegie Mellon University.This component is licensed under the BSD-style FreeTTS license.</description>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/english-kevin16.config,                    java/freetts-cmu_us_kal.jar"/>        </pack>        <pack name="tibetan" required="no" preselected="no"><description>OpenMary Tibetan: Basic Tibetan synthesis.This component is the result of a student project atSaarland University. It provides very basic synthesis ofTibetan (currently limited to Wylie transliteration) into speech.You will need a Tibetan synthesis voice -- until native Tibetanvoices exist, you can use the package mbrola-tib-nl2 which usesa Dutch diphone voice as an approximation. Volunteers for furtherdeveloping this component are welcome! The component may alsoillustrate the basics of creating a new language module in MARY.This component is licensed under the BSD-style OpenMary license.</description>            <depends packname="marybase"/>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/tibetan.config,					lib/modules/tib/cap/phoneme-list-tib.xml,					lib/modules/tib/cap/klattrule-params-tib.properties,					lib/modules/tib/cap/tonerule-params-tib.xml,					lib/modules/tib/prosody/tobipredparams-tib.xml,					java/mary-tibetan.jar"/>        </pack>        <pack name="javadoc" required="no" preselected="no">             <description>OpenMary API documentation.  			This component is licensed under the BSD-style OpenMary license.             </description>             <file src="./doc/javadoc" targetdir="$INSTALL_PATH/doc"/> <!-- Reccursive adding -->        </pack>         <pack name="sources" required="no" preselected="no"><description>OpenMary source code.This component is licensed under the BSD-style OpenMary license.</description>            <fileset dir="." targetdir="$INSTALL_PATH"            includes="java/**/*.java,				java/**/*.xsl,				java/**/*.txt,				java/**/*.html,				src/**/*,				examples,				.project,				.classpath,				build.xml,				README.usingEclipse.txt,				build/openmary-install.xml,				build/getstarted-info.txt,				build/installer-info.txt,				build/shortcuts-linux.xml,				build/shortcuts-windows.xml,				build/standalone-compiler.jar"/>        </pack>    </packs></installation>
