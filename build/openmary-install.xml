<?xml version="1.0" encoding="UTF-8" standalone="yes" ?><installation version="1.0">    <info>        <appname>MARY TTS</appname>        <appversion>3.0</appversion>        <authors>            <author name="Marc Schröder" email="schroed@dfki.de"/>            <author name="Jochen Steigner" email=""/>            <author name="Stefanie Becker" email=""/>            <author name="Anna Hunecke" email=""/>            <author name="Emilia Ellsiepen" email=""/>            <author name="Philipp von Böselager" email=""/>            <author name="Jens Apel" email=""/>            <author name="Lars Jungjohann" email=""/>            <author name="Maria Staudte" email=""/>            <author name="Jürgen Trouvain" email=""/>            <author name="Gregory Gulrajani" email=""/>        </authors>        <url>http://mary.dfki.de</url>        <javaversion>1.4</javaversion>        <webdir>http://mary.dfki.de/download</webdir>    </info>    <guiprefs width="640" height="480" resizable="no"/>    <locale>        <langpack iso3="eng"/>    </locale>    <variables>      <variable name="LicensePanel.packsCovered.0" value="marybase maryclient freettsbase"/>      <variable name="LicensePanel.packsCovered.1" value="freetts-synthesis english"/>      <variable name="LicensePanel.packsCovered.2" value="english-kevin16"/>    </variables>
    <resources>        <res id="LicensePanel.license.0" src="MARY software user agreement.txt" encoding="UTF-8"/>        <res id="LicensePanel.license.1" src="README.txt" encoding="UTF-8"/>        <res id="LicensePanel.license.2" src="build.xml" encoding="UTF-8"/>        <!--res id="InfoPanel.info" src="Readme.txt"/-->	</resources>
    <panels>        <panel classname="HelloPanel"/>        <!--panel classname="InfoPanel"/-->        <panel classname="TargetPanel"/>         <panel classname="PacksPanel"/>        <panel classname="de.dfki.lt.izpack.LicensePanel"/>        <panel classname="de.dfki.lt.izpack.LicensePanel"/>        <panel classname="de.dfki.lt.izpack.LicensePanel"/>        <panel classname="InstallPanel"/>        <panel classname="SimpleFinishPanel"/>        <!--panel classname="FinishPanel"/-->    </panels>
    <packs>        <pack name="marybase" required="no" preselected="yes">            <description>OpenMary Base: The base files for the OpenMary Text-to-speech server.            Unless you want to install only the MARY client, you will need this.</description>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY software user agreement.txt,					conf/marybase.config,					doc/licenses/apache-software-license.txt,					doc/licenses/CPL.txt,					doc/licenses/freetts-license.txt,					doc/licenses/jsresources-license.txt,					doc/licenses/LGPL.txt,					doc/licenses/README.txt,					lib/MaryXML.xsd,					lib/Sable.v0_2.mary.dtd,					lib/apml.dtd,					lib/sable-latin.ent,					lib/xml.xsd,					lib/endorsed/xalan-2.5.0.jar,					lib/endorsed/xercesImpl-2.4.0.jar,					lib/endorsed/xml-apis-from-xalan-2.5.0.jar,					lib/modules/en/cap/phoneme-list-en.xml,					lib/modules/tokeniser/jtok.cfg,					lib/modules/tokeniser/de/de_abbrev.xml,					lib/modules/tokeniser/de/de_classes.xml,					lib/modules/tokeniser/de/de_clitics.xml,					lib/modules/tokeniser/de/de_nbabbrev.txt,					lib/modules/tokeniser/de/de_numbers.xml,					lib/modules/tokeniser/de/de_punct.xml,					lib/modules/tokeniser/en/en_abbrev.xml,					lib/modules/tokeniser/en/en_classes.xml,					lib/modules/tokeniser/en/en_clitics.xml,					lib/modules/tokeniser/en/en_nbabbrev.txt,					lib/modules/tokeniser/en/en_numbers.xml,					lib/modules/tokeniser/en/en_punct.xml,					java/jsresources.jar,					java/jtok.jar,					java/junit.jar,					java/log4j-1.2.8.jar,					java/mary-common.jar,					java/mary-mbrola.jar,					java/tritonus_mp3.jar,					java/tritonus_remaining.jar,					java/tritonus_share.jar,					java/tritonus_src.jar,					log/README.txt,					tmp/README.txt,					Changelog.txt,					README.txt,					java/freetts.jar,					java/freetts-germanlex.jar,					java/freetts-de.jar,					java/freetts-mbrola.jar,					java/mary-freetts.jar"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH"				includes="bin/maryserver.bat,				    lib/windows/lame_enc.dll,					lib/windows/lametritonus.dll,					lib/windows/README.txt"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/maryserver.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/lib/windows/lame_enc.dll" stage="never"/>            <executable os="windows" targetfile="$INSTALL_PATH/lib/windows/lametritonus.dll" stage="never"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/maryserver.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/maryserver"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/maryserver"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/maryserver" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/maryserver"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/maryserver"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/maryserver" stage="never"/>            <fileset dir="lib/linux" targetdir="$INSTALL_PATH/lib/native"				includes="README.txt,					liblametritonus.so,					libmp3lame.so.0">				<os name="Linux"/>			</fileset>        </pack>        <pack name="maryclient" required="yes">            <description>OpenMary Client: The Client to the OpenMary TTS system.            You will need a client and a server to run the system on your machine.            However, in certain circumstances, you may want to connect to a server            running elsewhere, so you need only a client.            This includes a client implementation in Java, accompanied with a GUI            interface. Several simple example implementations in other programming            languages are also included.</description>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY software user agreement.txt,					doc/licenses/LGPL.txt,					examples/client/maryclient.pl,					examples/client/MaryClientUser.java,					examples/client/c++/Makefile,					examples/client/c++/mary_client.h,					examples/client/c++/mary_client.cc,					examples/client/c++/unicode.h,					examples/client/c++/unicode.cc,					examples/client/c++/demo_mary_client.cc,					java/maryclient.jar,					java/java-diff.jar,					java/tritonus_mp3.jar,					java/jl1.0.jar"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient.bat"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/maryclient.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/maryclient.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/maryclient"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/maryclient" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/maryclient"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/maryclient"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/maryclient" stage="never"/>        </pack>        <pack name="emospeak" required="no" preselected="yes">            <description>OpenMary EmoSpeak: Emotional speech with the OpenMary TTS system.            This includes a standalone and an applet version.            Both versions rely on the maryclient component for connecting to a server.            Note: Emospeak currently works only with German TTS.</description>            <depends packname="maryclient"/>            <fileset dir="." targetdir="$INSTALL_PATH"				includes="MARY software user agreement.txt,					examples/emospeak-applet.html,					java/emospeak.jar,					java/emospeakapplet.jar"/>            <fileset os="windows" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak.bat"/>			<parsable os="windows" targetfile="$INSTALL_PATH/bin/emospeak.bat"/>            <executable os="windows" targetfile="$INSTALL_PATH/bin/emospeak.bat" stage="never"/>            <fileset os="unix" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak"/>			<parsable os="unix" targetfile="$INSTALL_PATH/bin/emospeak"/>			<executable os="unix" targetfile="$INSTALL_PATH/bin/emospeak" stage="never"/>            <fileset os="mac" dir="." targetdir="$INSTALL_PATH" includes="bin/emospeak"/>			<parsable os="mac" targetfile="$INSTALL_PATH/bin/emospeak"/>			<executable os="mac" targetfile="$INSTALL_PATH/bin/emospeak" stage="never"/>        </pack>        <pack name="english" required="no" preselected="yes">            <description>Basic English synthesis</description>            <depends packname="marybase"/>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/english.config,					lib/modules/en/cap/tobirule-params-en.xml,					lib/modules/en/prosody/POSAccentPriorities.en.properties,					lib/modules/en/prosody/tobipredparams_english.xml,					lib/modules/en/synthesis/sampa2mrpa_en.map,					java/freetts-cmudict04.jar,					java/freetts-cmutimelex.jar,					java/freetts-en_us.jar,					java/mary-english.jar"/>        </pack>        <pack name="english-kevin16" required="no" preselected="yes">            <depends packname="english"/>            <description>English male diphone voice</description>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/english-kevin16.config,                    java/freetts-cmu_us_kal.jar"/>        </pack>        <pack name="tibetan" required="no" preselected="no">            <description>Basic Tibetan synthesis</description>            <depends packname="marybase"/>            <fileset dir="." targetdir="$INSTALL_PATH"                includes="conf/tibetan.config,					lib/modules/tib/cap/phoneme-list-tib.xml,					lib/modules/tib/cap/klattrule-params-tib.properties,					lib/modules/tib/cap/tonerule-params-tib.xml,					lib/modules/tib/prosody/tobipredparams-tib.xml,					java/mary-tibetan.jar"/>        </pack>        <pack name="javadoc" required="no" preselected="no">            <description>API documentation</description>            <file src="doc/javadoc" targetdir="$INSTALL_PATH/doc"/> <!-- Reccursive adding -->        </pack>        <pack name="sources" required="no" preselected="no">            <description>The sources</description>            <fileset dir="." targetdir="$INSTALL_PATH"            includes="java/**/*.java,				java/**/*.xsl,				java/**/*.txt,				java/**/*.html,				src/**/*,				examples,				.project,				.classpath,				build.xml,				README.usingEclipse.txt"/>        </pack>    </packs></installation>
